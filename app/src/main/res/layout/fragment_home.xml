<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/background1"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:layout_marginTop="400dp"
                android:text="Start Your Career now in JOBCANCY by sending your CV to one of your preference company"
                android:textSize="25dp"
                />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_bright"
                android:textAlignment="center"
                android:text="______________"
                android:textSize="50dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"

                android:text="Job Advertisements"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/gambar1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/gambar1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Get as much information you need to fullfill your dream job"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100sp"

                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Your Profile"
                android:textColor="#000000"
                android:textSize="30dp"
                />

            <ImageView
                android:id="@+id/gambar2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:src="@drawable/gambar2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:text="Find a job that suit with your profesion"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Professional Identity"
                android:textSize="30dp"
                android:layout_marginBottom="30dp"
                />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:adjustViewBounds="true"
                android:src="@drawable/gambar3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="35dp"
                android:textAlignment="center"
                android:textSize="25dp"
                android:text="Make your own online professional identity and make sure you get the a good career path"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>